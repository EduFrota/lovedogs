<% provide(:page_title, 'Faça seu cadastro') %>

<div class="container">
  <div class="columns">
    <div class="column is-6 is-offset-3">
      <div class="wrap_logo">
        <%= image_tag('logo.png', class: 'auth_logo') %>
        <h1 class="title has-text-weight-light">Love<span class="has-text-weight-normal">Dogs</span></h1>
      </div>
      <%= render partial: 'shared/flash' %>
      <%= render partial: 'users/shared/error_messages', resource: resource %>
      <div class="box">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :name, class: 'label is_required' %>
            <div class="control">
              <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'input' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :email, class: 'label is_required' %>
            <div class="control">
              <%= f.email_field :email, autocomplete: 'email', class: 'input' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: 'label is_required' %>
            <div class="control">
              <%= f.password_field :password, autocomplete: 'new-password', class: 'input' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: 'label is_required' %>
            <div class="control">
              <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'input' %>
            </div>
          </div>

          <div class="signin_signup">
            <%= f.submit 'Registrar', class: 'button is-primary is-fullwidth has-text-weight-bold is_signup' %>
          </div>

          <p class="auth_or">Ou</p>

          <%= link_to 'Entrar com Facebook', user_facebook_omniauth_authorize_path, alt: 'facebook', class: 'button is-primary is-fullwidth is_facebook' %>

          <br>
          <div class="has-text-centered">
            <%= link_to 'Já possui uma conta? ', new_user_session_path, alt: 'login', class: 'has-text-info' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
